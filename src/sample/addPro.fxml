<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vbLogin" alignment="CENTER" spacing="10.0" styleClass="vbLogin" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">

    <children>
      <Label text="fill the profesional details" />
      <MenuButton fx:id="itype" mnemonicParsing="false" text="select type">
        <items>
          <MenuItem fx:id="iactor" mnemonicParsing="false" text="Actor" />
          <MenuItem fx:id="idirector" mnemonicParsing="false" text="Director" />
            <MenuItem fx:id="iproducer" mnemonicParsing="false" text="Producer" />
            <MenuItem fx:id="iscreenwriter" mnemonicParsing="false" text="Screenwriter" />
        </items>
      </MenuButton>

        <TextField fx:id="iid" promptText="id" styleClass="txt" />
      <TextField fx:id="iage" promptText="age" styleClass="txt" />
      <TextField fx:id="idescription" promptText="description" styleClass="txt" />
      <MenuButton fx:id="igender" mnemonicParsing="false" text="select gender">
        <items>
          <MenuItem fx:id="imale" mnemonicParsing="false" text="Male" />
          <MenuItem fx:id="ifemale" mnemonicParsing="false" text="Female" />
        </items>
      </MenuButton>
      <TextField fx:id="iname" promptText="name" styleClass="txt" />

        <Button fx:id="saveBtn" styleClass="button" text="adding movies will be soon" />

    </children>
   <padding>
      <Insets left="20.0" right="20.0" />
   </padding>

</VBox>
