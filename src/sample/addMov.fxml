<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vbLogin" alignment="CENTER" spacing="10.0" styleClass="vbLogin" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <Label text="fill the movie details" />
        <TextField fx:id="idField" promptText="id" styleClass="txt" />
        <TextField fx:id="nameField" promptText="name" styleClass="txt" />
        <TextField fx:id="lengthField" promptText="length" styleClass="txt" />
        <TextField fx:id="yearField" promptText="year" styleClass="txt" />
      <MenuButton fx:id="ratingField" mnemonicParsing="false" prefHeight="25.0" prefWidth="159.0" text="Rating">
        <items>
          <MenuItem mnemonicParsing="false" text="1"/>
          <MenuItem mnemonicParsing="false" text="2" />
          <MenuItem mnemonicParsing="false" text="3" />
          <MenuItem mnemonicParsing="false" text="4" />
          <MenuItem mnemonicParsing="false" text="5" />
          <MenuItem mnemonicParsing="false" text="6" />
          <MenuItem mnemonicParsing="false" text="7" />
          <MenuItem mnemonicParsing="false" text="8" />
          <MenuItem mnemonicParsing="false" text="9" />
          <MenuItem mnemonicParsing="false" text="10" />
        </items>
      </MenuButton>
      
        <TextField fx:id="descField" promptText="description" styleClass="txt" />
        <TextField fx:id="genres" promptText="genres fromat: 'genre1,genre2'" styleClass="txt" />
        
        <Button fx:id="saveBtn" styleClass="button" text="adding movies will be soon" />

    </children>
    <padding>
        <Insets left="20.0" right="20.0" />
    </padding>

</VBox>
